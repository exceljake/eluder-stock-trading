<%= render "partials/navigation" %>

<h1 class="mt-4 ml-4 text-2xl font-semibold">Admin Dashboard</h1>

<div class="block p-6 max-w-sm bg-white rounded-lg border border-lime-500 shadow-md dark:bg-lime-600 dark:border-lime-700  ml-12 mt-8">
  <p><%= "#{current_user.last_name}, #{current_user.first_name}" %></p>
  <p>Email: <%= current_user.email %></p>
  <p><%= current_user.role.upcase %></p>
  <%= link_to "Edit", user_edit_path(current_user.role), class: "bg-lime-500 hover:bg-lime-700 text-white  font-semibold px-4 rounded" %>
</div>

<div class="ml-12 mt-8">
<% if @traders.pending.count != 0 %>

  <%= render "partials/notice", title: "Heads up!", check: { pending: @traders.pending } %>

<% end %>
</div>

<div class="ml-12 mt-8">
<h2 class="mb-2">Statistics</h2>

<div>
  <h3>Accounts <%= @traders.count %></h3>
  <p>Pending <%= @traders.pending.count %></p>
  <p>Approved <%= @traders.approved.count %></p>
  <%= link_to "See Accounts", accounts_path, class: "bg-lime-500 hover:bg-lime-700 text-white  font-semibold px-4 rounded"  %>
</div>

<div class="mt-8">
  <h3>Transactions <%= @transactions.count %></h3>
  <p>Buy <%= @transactions.buy.count %></p>
  <p>Sell <%= @transactions.sell.count %></p>
  <%= link_to "See Transactions", admin_transactions_path, class: "bg-lime-500 hover:bg-lime-700 text-white  font-semibold px-4 rounded" %>
</div>
</div>
